  SaveExit: Pointer;

procedure ExitDrivers;
begin
  ExitProc := SaveExit;
  DoneSysError;
  DoneEvents;
  SysTVDoneMouse(True);
  {$IFDEF DNPRG}
  if ErrorAddr <> nil then begin
   ErrAdd := Longint(ErrorAddr);
   ErrorAddr := Nil;
  {FatalError;}{?}
  end;
  {$ENDIF}
end;

